# Photo Frame Slideshow Server Configuration
# Copy this file to .env and customize the values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=production

# Admin Authentication
ADMIN_PASSWORD=changeme123

# Database
DATABASE_URL=sqlite:///db/slideshows.db

# Celery/Redis Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=10737418240  # 10GB in bytes

# Directory Configuration (relative to container)
UPLOAD_FOLDER=uploads
SLIDESHOW_FOLDER=slideshows
TEMP_FOLDER=temp

# Default Slideshow Settings
DEFAULT_SCREEN_WIDTH=1280
DEFAULT_SCREEN_HEIGHT=800
DEFAULT_ROTATION_INTERVAL=60